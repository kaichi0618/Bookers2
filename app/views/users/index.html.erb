<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/user', user: @user %>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table class="table">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size: '100x100', format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <td><%= link_to "show", user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
      </div>
    </div>
  </div>