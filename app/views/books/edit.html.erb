<div class="container">
  <div class="row">
    <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">

      <h1>Editing book</h1>

      <%= render 'books/eroor', book: @book %>

      <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
        <label for="inputtitle">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputtitle", placeholder:"title", class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="inputopinion">Opinion</label>
      <%= f.text_area :opinion, autofocus: true, id:"inputopinion", placeholder:"opinion", class:"form-control" %>
      </div>
      <div><%= f.submit "Update Book", class:"btn btn-success" %></div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      <span> | </span>
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>